<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/character_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/MaterialAlertDialog.Material3.Title.Text.CenterStacked"
            tools:text="Ricky"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/character_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintTop_toBottomOf="@id/character_name"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/details_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/character_name"
            app:layout_constraintStart_toEndOf="@id/character_image"
            android:layout_marginTop="18dp"
            android:layout_marginStart="8dp"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            android:text="@string/details_character_item_title"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/character_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/details_title"
            app:layout_constraintStart_toEndOf="@id/details_title"
            android:layout_marginStart="8dp"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            tools:text="Alive"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/character_species"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/character_status"
            app:layout_constraintStart_toEndOf="@id/details_title"
            android:layout_marginStart="8dp"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            tools:text="Human"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/character_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/character_species"
            app:layout_constraintStart_toEndOf="@id/details_title"
            android:layout_marginStart="8dp"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            tools:text="Human"
            android:textAlignment="center"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
